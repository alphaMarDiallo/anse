{% extends 'Layout_back.html.twig' %}

{% block content %}

 <div class="container col-xl-12"><br>
    <div class="divadmin">
        <br><h3 class="display-4 text-center">Gestion des membres</h3><hr><br>
        <div class="row">
            <p class="col-md-6 offset-md-3"> 
                <strong>Nombre de clients : {{ members | length }}</strong>
            </p>
            <a href="#" class="class-md-6 offset-md-7 btn btn-outline-primary mb-2">Ajouter un Patient</a>
        </div>
        <table class="table table-dark col-md-6 offset-md-3 text-center">
            <thead>
                <tr>
                    <th scope="col" >Pr√©nom</th>
                    <th scope="col" >Nom</th>
                    <th scope="col" >Email</th>
                    <th scope="col">Action</th>
                </tr>
            </thead>
            <tbody>
                {% for member in members %}
                <tr>
                    <td scope="col" class="text-center">{{ member.firstName }}</td>
                    <td scope="col" class="text-center">{{ member.lastName }}</td>
                    <td scope="col" class="text-center">{{ member.email }}</td>
                    <td scope="col"><a href="{{path('adminProfileMember',{'id' : member.idMember})}}"class="text-center text-info"><i class="fas fa-eye fa-2x"></i></a></td>
                </tr>
                {% endfor %}
            </tbody>
        </table>

    </div>
</div><br>
{% endblock %}
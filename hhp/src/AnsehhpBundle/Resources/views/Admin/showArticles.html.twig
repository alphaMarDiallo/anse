{% extends 'Layout_back.html.twig' %}


{# {% block title %}Portfolio - Competences{% endblock %} #}

{% block content %}

 <div class="container col-xl-12"><br>
    <div class="divadmin">
        <br><h3 class="display-4 text-center">Gestion des membres</h3><hr><br>
        <div class="row">
            <p class="col-md-6 offset-md-3"> 
                <strong>Nombre d'articles : {{ articles | length }}</strong>
            </p>
            <a href="#" class="class-md-6 offset-md-7 btn btn-outline-primary mb-2">Ajouter un Article</a>
        </div>
        <table class="table table-dark col-md-6 offset-md-3">
            <thead>
                <tr>
                    <th scope="col" class="text-center">Titre</th>
                    <th scope="col" class="text-center">Article</th>
                    <th scope="col" class="text-center">Lien</th>
                    <th scope="col" class="text-center">Date de publication</th>
                    {# <th scope="col" class="text-center">Date de parution</th> #}
                    <th colspan="2">Action</th>
                </tr>
            </thead>
            <tbody>
                {% for art in articles %}
                <tr>
                    <td scope="col" class="text-center">{{ art.titleArticle }}</td>
                    <td scope="col" class="text-justify">{{ art.article }}</td>
                    <td scope="col" class="text-center">{{ art.link}}</td>
                    <td scope="col" class="text-center">{{ art.dateArt|date("d-m-Y") }}</td>
                    <td scope="col"><a href="{{path('showArticles',{'id' : art.idArticle})}}" class="text-center text-warning"><i class="far fa-edit fa-2x"></i></a></td>
                    <td scope="col"><a href="{{path('showArticles',{'id' : art.idArticle})}}" class="text-center text-danger"><i class="fas fa-trash-alt fa-2x"></i></a></td>
                </tr>
                {% endfor %}
            </tbody>
        </table>

    </div>
</div><br>
{% endblock %}